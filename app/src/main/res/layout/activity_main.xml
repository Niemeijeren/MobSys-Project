<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonStartLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_location_updates"/>

    <Button
        android:id="@+id/buttonStopLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_location_updates"/>

    <TextView
        android:id="@+id/tv_magnetometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Magnetometer: false" />

    <TextView
        android:id="@+id/tvaccellerometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="accellerometer: false" />


</LinearLayout>